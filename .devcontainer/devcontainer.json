{
  "name": "02Luka Development Container",
  "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  },
  "runArgs": [
    "--dns=8.8.8.8",
    "--dns=1.1.1.1",
    "--network=bridge"
  ],
  "containerEnv": {
    "CLS_SHELL": "/bin/bash",
    "SHELL": "/bin/bash",
    "PATH": "/usr/local/bin:/usr/bin:/bin"
  },
  "postCreateCommand": "ping -c 2 8.8.8.8 && echo '✅ Network OK'",
  "postStartCommand": "ping -c 2 8.8.8.8 || echo '⚠️  Network not reachable'",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash"
          }
        }
      }
    }
  }
}