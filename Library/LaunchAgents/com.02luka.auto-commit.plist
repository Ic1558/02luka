    <false/>  <!-- Don't run immediately on boot -->
    
    <key>StandardOutPath</key>
    <string>/Users/icmini/02luka/logs/auto_commit.log</string>
    
    <key>StandardErrorPath</key>
    <string>/Users/icmini/02luka/logs/auto_commit.log</string>
</dict>
