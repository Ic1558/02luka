{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://02luka.dev/schemas/health_dashboard.json",
  "title": "Health Dashboard Schema",
  "description": "Unified health dashboard combining MCP health and file index data",
  "type": "object",
  "required": ["_meta", "mcp", "files"],
  "properties": {
    "_meta": {
      "type": "object",
      "description": "Metadata about the dashboard generation",
      "required": ["created_by", "created_at", "source", "unified"],
      "properties": {
        "created_by": {
          "type": "string",
          "description": "Generator agent/system name"
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of generation"
        },
        "source": {
          "type": "string",
          "description": "Source script name"
        },
        "unified": {
          "type": "boolean",
          "description": "Indicates this is a unified dashboard",
          "const": true
        },
        "version": {
          "type": "string",
          "description": "Dashboard schema version"
        }
      }
    },
    "mcp": {
      "type": "array",
      "description": "MCP (Model Context Protocol) health entries",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["healthy", "degraded", "unhealthy", "unknown"]
          },
          "lastCheck": { "type": "string", "format": "date-time" },
          "endpoint": { "type": "string" },
          "responseTime": { "type": "number" },
          "error": { "type": "string" }
        }
      }
    },
    "files": {
      "type": "array",
      "description": "File index entries from hub/index.json",
      "items": {
        "type": "object",
        "properties": {
          "path": { "type": "string" },
          "size": { "type": "number" },
          "modified": { "type": "string", "format": "date-time" },
          "hash": { "type": "string" },
          "type": { "type": "string" }
        }
      }
    }
  },
  "additionalProperties": false
}
