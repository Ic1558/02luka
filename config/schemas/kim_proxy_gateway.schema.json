{
  "$id": "file:config/schemas/kim_proxy_gateway.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Kim Proxy Gateway Config",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "service": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {"type": "string"},
        "version": {"type": "string"},
        "description": {"type": "string"},
        "port": {"type": "integer"},
        "host": {"type": "string"}
      },
      "required": ["name", "port", "host"]
    },
    "routing": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "default_agent": {"type": "string"},
        "fallback_agent": {"type": "string"},
        "confidence_thresholds": {
          "type": "object",
          "properties": {
            "high": {"type": "number"},
            "medium": {"type": "number"},
            "low": {"type": "number"}
          }
        },
        "ambiguous_threshold": {"type": "number"},
        "on_ambiguous": {"type": "string"},
        "multi_agent_enabled": {"type": "boolean"},
        "multi_agent_threshold": {"type": "number"}
      }
    },
    "backends": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "intent_classification": {
      "type": "object",
      "additionalProperties": true
    },
    "delegation": {
      "type": "object",
      "additionalProperties": true
    },
    "telemetry": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "enabled": {"type": "boolean"},
        "schema": {"type": "string"},
        "sink": {"type": "string"},
        "events": {"type": "array", "items": {"type": "string"}}
      }
    },
    "performance": {
      "type": "object",
      "additionalProperties": true
    },
    "cache": {
      "type": "object",
      "additionalProperties": true
    },
    "health_check": {
      "type": "object",
      "additionalProperties": true
    },
    "logging": {
      "type": "object",
      "additionalProperties": true
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "required": ["service", "routing", "backends"]
}
