{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "file:config/schemas/mcp_health.schema.json",
  "title": "MCP Health Snapshot Schema",
  "description": "Schema for MCP server health check results generated by mcp_health.mjs",
  "type": "object",
  "required": ["_meta", "results"],
  "additionalProperties": false,
  "properties": {
    "_meta": {
      "type": "object",
      "required": ["created_by", "created_at", "source", "registry_path", "total", "healthy"],
      "additionalProperties": false,
      "properties": {
        "created_by": {
          "type": "string",
          "description": "Creator identifier"
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "ISO8601 timestamp of creation"
        },
        "source": {
          "type": "string",
          "const": "mcp_health.mjs",
          "description": "Source script that generated this file"
        },
        "registry_path": {
          "type": "string",
          "description": "Path to the MCP registry file"
        },
        "total": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of servers checked"
        },
        "healthy": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of healthy servers"
        }
      }
    },
    "results": {
      "type": "array",
      "description": "Health check results for each server",
      "items": {
        "type": "object",
        "required": ["name", "ok", "latency_ms", "command", "args", "reason"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "description": "Server name"
          },
          "ok": {
            "type": "boolean",
            "description": "Whether the server health check passed"
          },
          "latency_ms": {
            "type": "number",
            "minimum": 0,
            "description": "Response time in milliseconds"
          },
          "command": {
            "type": "string",
            "description": "Command path that was checked"
          },
          "args": {
            "type": "array",
            "description": "Arguments passed to the command",
            "items": {
              "type": "string"
            }
          },
          "reason": {
            "type": "array",
            "description": "Reasons for failure or notes (empty if ok with no issues)",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
