{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["plan", "files", "tests"],
  "properties": {
    "plan": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "content"],
        "properties": {
          "path": {
            "type": "string",
            "pattern": "^[/a-zA-Z0-9._-]+"
          },
          "content": {
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "default": []
    },
    "tests": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "clarifications": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}
