{
  "$id": "file:config/schemas/memory_guard.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "thresholds": {
      "type": "object",
      "properties": {
        "warn_mb": { "type": "number", "minimum": 1 },
        "fail_mb": { "type": "number", "minimum": 1 }
      },
      "required": ["warn_mb","fail_mb"]
    },
    "deny_globs": { "type": "array", "items": { "type": "string" } },
    "allow_globs": { "type": "array", "items": { "type": "string" } },
    "paths": {
      "type": "object",
      "properties": { "repo_root_env": { "type": "string" } },
      "required": ["repo_root_env"]
    }
  },
  "required": ["thresholds","deny_globs","allow_globs","paths"]
}
