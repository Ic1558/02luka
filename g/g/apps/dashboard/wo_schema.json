{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WorkOrder",
  "description": "Normalized schema for all WO types (JSON requests + .zsh scripts)",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique WO identifier (e.g., WO-251105-test_executor)"
    },
    "title": {
      "type": "string",
      "description": "Human-readable title"
    },
    "goal": {
      "type": "string",
      "description": "Plain English objective (1-2 lines)"
    },
    "owner": {
      "type": "string",
      "enum": ["CLC", "Mary", "Paula", "System"],
      "description": "Agent or user who created this WO"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "approved", "queued", "running", "success", "failed", "blocked", "stalled"],
      "description": "Current WO state"
    },
    "op": {
      "type": "string",
      "description": "Operation type (analyze, pm_rollup, execute, etc.)"
    },
    "inputs": {
      "type": "object",
      "description": "Input parameters or files"
    },
    "outputs": {
      "type": "object",
      "description": "Output artifacts, results, or files"
    },
    "started_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when execution started"
    },
    "completed_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when execution finished"
    },
    "duration_ms": {
      "type": "integer",
      "description": "Execution duration in milliseconds"
    },
    "last_heartbeat_at": {
      "type": "string",
      "format": "date-time",
      "description": "Last activity timestamp (for stall detection)"
    },
    "current_step": {
      "type": "string",
      "description": "Current execution step (free text)"
    },
    "error": {
      "type": ["object", "null"],
      "properties": {
        "message": {
          "type": "string",
          "description": "Short error summary"
        },
        "code": {
          "type": "integer",
          "description": "Exit code or error number"
        },
        "log_path": {
          "type": "string",
          "description": "Path to full error log"
        }
      }
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of output file paths or URLs"
    },
    "cost_estimate_usd": {
      "type": "number",
      "description": "Estimated cost for LLM operations"
    },
    "token_estimate": {
      "type": "integer",
      "description": "Estimated token usage"
    },
    "log_path": {
      "type": "string",
      "description": "Path to execution log file"
    },
    "script_path": {
      "type": "string",
      "description": "Path to .zsh script or JSON file"
    }
  },
  "required": ["id", "status", "owner"]
}
