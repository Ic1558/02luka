#!/usr/bin/env bash
# 02luka Path Configuration
# Created: 2025-11-04
# Purpose: Centralized SOT path definitions
# Source this file in your shell: source ~/02luka/paths.env

# Single Source of Truth (SOT)
export LUKA_SOT="/Users/icmini/02luka"
export LUKA_BASE="/Users/icmini/02luka"
export LUKA_HOME="/Users/icmini/02luka/g"
export SOT_PATH="/Users/icmini/02luka/g"
export LUKA_ROOT="/Users/icmini/02luka"

# Google Drive (Stream Mode)
export LUKA_GD_ROOT="${LUKA_GD_ROOT:-$HOME/Library/CloudStorage/*/My Drive}"
export LUKA_GD_BASE="${LUKA_GD_BASE:-$LUKA_GD_ROOT/02luka}"

# Redis Configuration
export REDIS_HOST="127.0.0.1"
export REDIS_PORT="6379"
export REDIS_PASSWORD="${REDIS_PASSWORD:-gggclukaic}"
export LUKA_REDIS_URL="${LUKA_REDIS_URL:-redis://127.0.0.1:6379}"

# Quiet flags for local development (prevent accidentally running heavy operations)
export SKIP_BOSS_API="${SKIP_BOSS_API:-1}"
export CI_QUIET="${CI_QUIET:-1}"

# Path additions
export PATH="/Users/icmini/02luka/bin:$PATH"
export PATH="/Users/icmini/02luka/tools:$PATH"
export PYTHONPATH="/Users/icmini/02luka/core:$PYTHONPATH"

# Docker Data (relocated to external volume)
# Symlinked at: ~/Library/Containers/com.docker.docker/Data -> /Volumes/lukadata/docker-data/Data

# Ollama Configuration
export OLLAMA_HOST=127.0.0.1:11434
export OLLAMA_MODELS=/Volumes/lukadata/ollama_fixed
