{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AP/IO v3.1 Protocol Message Schema",
  "description": "Schema for AP/IO v3.1 protocol messages",
  "type": "object",
  "required": ["protocol", "version", "agent", "ts", "event"],
  "properties": {
    "protocol": {
      "type": "string",
      "const": "AP/IO",
      "description": "Protocol identifier"
    },
    "version": {
      "type": "string",
      "const": "3.1",
      "description": "Protocol version"
    },
    "agent": {
      "type": "string",
      "enum": ["cls", "andy", "hybrid", "liam", "gg", "kim"],
      "description": "Agent identifier"
    },
    "ts": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Alternative timestamp field (for backward compatibility)"
    },
    "correlation_id": {
      "type": "string",
      "pattern": "^corr-[0-9]{8}-[0-9]{3}$",
      "description": "Correlation ID for event chains"
    },
    "session_id": {
      "type": "string",
      "description": "Session identifier"
    },
    "event": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["heartbeat", "task_start", "task_result", "error", "info", "routing_request", "correlation_query"],
          "description": "Event type"
        },
        "task_id": {
          "type": "string",
          "description": "Task identifier"
        },
        "source": {
          "type": "string",
          "enum": ["gg_orchestrator", "kim", "cursor", "launchd", "boss", "system"],
          "description": "Event source"
        },
        "summary": {
          "type": "string",
          "description": "Human-readable summary"
        },
        "data": {
          "type": "object",
          "description": "Additional event data"
        }
      }
    },
    "routing": {
      "type": "object",
      "properties": {
        "targets": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["cls", "andy", "hybrid", "liam", "gg", "kim"]
          },
          "description": "Target agents for routing"
        },
        "priority": {
          "type": "string",
          "enum": ["high", "normal", "low"],
          "description": "Event priority"
        }
      }
    }
  }
}
