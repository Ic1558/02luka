{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AP/IO v3.1 Protocol Schema",
  "description": "Application Protocol / Input-Output version 3.1 message format",
  "type": "object",
  "required": ["protocol", "version", "agent", "timestamp", "event"],
  "properties": {
    "protocol": {
      "type": "string",
      "enum": ["AP/IO"],
      "description": "Protocol identifier"
    },
    "version": {
      "type": "string",
      "pattern": "^3\\.1$",
      "description": "Protocol version (3.1)"
    },
    "agent": {
      "type": "string",
      "enum": ["cls", "andy", "hybrid", "liam", "gg", "kim"],
      "description": "Agent identifier"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 timestamp with timezone"
    },
    "correlation_id": {
      "type": "string",
      "pattern": "^corr-[0-9]{8}-[0-9]{3}$",
      "description": "Unique correlation ID for event chains"
    },
    "session_id": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}_[a-z]+_[0-9]{3}$",
      "description": "Session identifier (YYYY-MM-DD_agent_NNN)"
    },
    "event": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["heartbeat", "task_start", "task_result", "error", "info", "routing_request", "correlation_query"],
          "description": "Event type"
        },
        "task_id": {
          "type": "string",
          "description": "Task identifier (e.g., wo-YYYYMMDD-task-name)"
        },
        "source": {
          "type": "string",
          "enum": ["gg_orchestrator", "kim", "cursor", "launchd", "boss", "system"],
          "description": "Event source"
        },
        "summary": {
          "type": "string",
          "description": "Human-readable event summary"
        }
      }
    },
    "data": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": ["success", "failure", "started", "in_progress", "error"],
          "description": "Task status"
        },
        "duration_sec": {
          "type": "number",
          "minimum": 0,
          "description": "Task duration in seconds"
        },
        "files_touched": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of files modified"
        },
        "metadata": {
          "type": "object",
          "properties": {
            "complexity": {
              "type": "string",
              "enum": ["low", "medium", "high"]
            },
            "risk_level": {
              "type": "string",
              "enum": ["safe", "guarded", "critical"]
            },
            "impact_zone": {
              "type": "string",
              "enum": ["normal_code", "governance", "memory", "bridges"]
            }
          }
        }
      }
    },
    "routing": {
      "type": "object",
      "properties": {
        "targets": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["cls", "andy", "hybrid", "liam", "gg", "kim"]
          },
          "description": "Target agents for routing"
        },
        "broadcast": {
          "type": "boolean",
          "description": "Broadcast to all agents"
        },
        "priority": {
          "type": "string",
          "enum": ["critical", "high", "normal", "low"],
          "description": "Routing priority"
        },
        "delivered_to": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Agents that received this event"
        }
      }
    }
  }
}
