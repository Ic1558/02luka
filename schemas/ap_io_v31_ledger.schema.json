{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AP/IO v3.1 Ledger Entry Schema",
  "description": "Schema for ledger entries in g/ledger/<agent>/YYYY-MM-DD.jsonl",
  "type": "object",
  "required": ["protocol", "version", "ts", "agent", "event"],
  "properties": {
    "protocol": {
      "type": "string",
      "enum": ["AP/IO"],
      "description": "Protocol identifier"
    },
    "version": {
      "type": "string",
      "pattern": "^3\\.1$",
      "description": "Protocol version"
    },
    "ledger_id": {
      "type": "string",
      "pattern": "^ledger-[0-9]{8}-[0-9]{6}-[a-z]+-[0-9]+$",
      "description": "Unique ledger entry ID (format: ledger-YYYYMMDD-HHMMSS-<agent>-<seq>)"
    },
    "parent_id": {
      "type": "string",
      "pattern": "^parent-(wo|event|session)-.+$",
      "description": "Parent WO/event/session ID (format: parent-<type>-<id>)"
    },
    "ts": {
      "type": "string",
      "format": "date-time",
      "description": "ISO-8601 timestamp"
    },
    "agent": {
      "type": "string",
      "enum": ["cls", "andy", "hybrid", "liam", "gg", "kim"],
      "description": "Agent identifier"
    },
    "correlation_id": {
      "type": "string",
      "pattern": "^corr-[0-9]{8}-[0-9]{3}$",
      "description": "Correlation ID for event chains"
    },
    "session_id": {
      "type": "string",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}_[a-z]+_[0-9]{3}$",
      "description": "Session identifier"
    },
    "event": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["heartbeat", "task_start", "task_result", "error", "info", "routing_request", "correlation_query"]
        },
        "task_id": {
          "type": "string"
        },
        "source": {
          "type": "string",
          "enum": ["gg_orchestrator", "kim", "cursor", "launchd", "boss", "system"]
        },
        "summary": {
          "type": "string"
        }
      }
    },
    "data": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string",
          "enum": ["success", "failure", "started", "in_progress", "error"]
        },
        "duration_sec": {
          "type": "number",
          "minimum": 0
        },
        "execution_duration_ms": {
          "type": "number",
          "minimum": 0,
          "description": "Execution duration in milliseconds (more precise than duration_sec)"
        },
        "files_touched": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "metadata": {
          "type": "object",
          "properties": {
            "complexity": {
              "type": "string",
              "enum": ["low", "medium", "high"]
            },
            "risk_level": {
              "type": "string",
              "enum": ["safe", "guarded", "critical"]
            },
            "impact_zone": {
              "type": "string",
              "enum": ["normal_code", "governance", "memory", "bridges"]
            }
          }
        }
      }
    },
    "routing": {
      "type": "object",
      "properties": {
        "targets": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["cls", "andy", "hybrid", "liam", "gg", "kim"]
          }
        },
        "broadcast": {
          "type": "boolean"
        },
        "priority": {
          "type": "string",
          "enum": ["critical", "high", "normal", "low"]
        },
        "delivered_to": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
